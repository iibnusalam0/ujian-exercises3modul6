<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Data Produk</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Show Produk</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Data Produk</h3>
              <a href="/ujian-exercises3modul6/adminLTE/add_produk">
                <button type="button" class="btn btn-block btn-success"><i class="fa fa-plus"></i>&nbsp;Add News</button>
              </a>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <% if (messages.info) { %>
              <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fa fa-check"></i> Info!</h5>
                <%= messages.info %>
              </div>
              <% } %>
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th>Nama Produk</th>
                  <th>Gambar Produk</th>
                  <th>Harga Produk</th>
                  <th>Deskripsi Produk</th>
                  <th>Aksi</th>
                </tr>
                </thead>
                <tbody>
                  <%
                    if (data.length)
                    {
                      for (var i=0; i < data.length; i++)
                      {
                  %>
                <tr>
                  <td><%= data[i].nama_produk %></td>
                  <td><img style="padding-top: 20px" src="/public/images/<%= data[i].gambar_produk; %>" width="70" height="140" /></td>
                  <td><%= data[i].harga_product %></td>
                  <td><%= data[i].des_product.substring(0, 30) %>... <a href="#">read more</a></td>
                  <td>
                    <a class="btn btn-warning" href="/ujian-exercises3modul6/adminLTE/edit_produk/<%= data[i].id_product %>"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>                      
                    <a class="btn btn-danger" href="/ujian-exercises3modul6/adminLTE/delete_produk/<%= data[i].id_product %>" onclick="return confirm('Are you sure want to delete id_produk = ' + <%= data[i].id_product %> + '?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
                  </td>
                </tr>
                <% 
                    }
                  }
                %>  
                </tbody>
                <tfoot>
                <tr>
                  <th>Nama Produk</th>
                  <th>Gambar Produk</th>
                  <th>Harga Produk</th>
                  <th>Deskripsi Produk</th>
                  <th>Aksi</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>